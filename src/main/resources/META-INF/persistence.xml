<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Unidad de persistencia principal -->
    <persistence-unit name="universidadPU" transaction-type="RESOURCE_LOCAL">
        <!-- Proveedor de persistencia -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Escaneo automático de entidades en el paquete com.umg.universidadproyecto.model -->
        <class>com.umg.universidadproyecto.model.Estudiante</class>
        <class>com.umg.universidadproyecto.model.Catedratico</class>
        <class>com.umg.universidadproyecto.model.Curso</class>
        <class>com.umg.universidadproyecto.model.Evaluacion</class>
        <class>com.umg.universidadproyecto.model.Nota</class>

        <properties>
            <!-- Configuración de conexión PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/universidadproyecto"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="Umg123456"/>

            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.lob.non_contextual_creation" value="true"/>

            <!-- Optimización -->
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>

</persistence>
